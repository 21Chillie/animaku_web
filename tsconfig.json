{
	"extends": "@tsconfig/node24/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", "dist", "public"]
}
