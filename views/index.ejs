<!DOCTYPE html>
<html lang="en" data-theme="dark">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- Favicon -->
	<link rel="shortcut icon" href="/images/icons/favicon.ico"
			type="image/x-icon" />

	<!-- CSS -->
	<link rel="stylesheet" href="/css/tailwindcss/tailwind.css" />

	<link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

	<link rel="stylesheet" href="/css/button-more.css" />

	<link rel="stylesheet" href="/css/index.css" />

	<title>AnimaKu - Anime/Manga Tracker</title>

	<!-- JS -->
	<script type="module" src="/js/navbar.js" defer></script>
	<script type="module" src="/js/toggleTheme.js" defer></script>
</head>

<body>
	<header><%- include('partials/navbar.ejs') %></header>

	<main>
		<!-- Hero Section -->
		<section
				class="hero-section relative w-full mt-14 md:mt-28 overflow-hidden">
			<!-- Hero Background Image (LCP optimized) -->
			<img src="/images/hero-image.webp" alt="AnimaKu Hero Banner" width="1920"
					height="1080" fetchpriority="high" decoding="async"
					class="absolute inset-0 w-full h-full object-cover -z-10" />

			<!-- Overlay for darkening image -->
			<div class="image-overlay absolute inset-0 z-0"></div>

			<!-- Content -->
			<div
					class="relative z-10 mx-auto w-screen max-w-screen-7xl px-4 py-12 md:py-24 flex flex-col gap-6">
				<!-- Hero Title and Description -->
				<div
						class="hero-title mx-auto max-w-prose text-center flex flex-col gap-4">
					<div
							class="hero-badge flex items-center gap-2 rounded-full px-4 py-2 text-sm border w-fit mx-auto">
						<i class="ri-clipboard-line"></i>
						<p class="font-medium inline">Track Your Favorite Titles</p>
					</div>

					<h1 class="text-3xl md:text-5xl font-bold max-w mx-auto">
						No more
						<span class="hero-title-blue">lost title,</span>
						just manage your list.
					</h1>

					<p class="text-sm md:text-base text-pretty sm:text-lg/relaxed">
						Create your personal watch list and read list with AnimaKu. Easily
						track the anime or
						manga you’ve finished and discover what’s next on your journey, all
						in one organized
						list.
					</p>
				</div>

				<!-- CTA Button -->
				<div class="flex justify-center items-center gap-4">
					<a href="/browse">
						<button class="btn-get-started px-5 py-3 shadow-md text-base"> Get
							Started </button>
					</a>
					<a href="https://github.com/21Chillie/animaku_web" target="_blank">
						<button class="btn-documentation px-5 py-3 shadow-md text-base">
							Read Docs </button>
					</a>
				</div>
			</div>
		</section>

		<!-- Anime Trending Section -->
		<section id="trending-anime-section" class="w-screen my-8">
			<div class="max-w-7xl mx-auto flex flex-col gap-4 px-4">
				<!-- Title Section -->
				<div class="trending-anime-title flex justify-between gap-3">
					<div class="flex flex-col gap-1">
						<h2 class="text-xl md:text-2xl font-bold">Trending Now</h2>
						<p class="text-sm md:text-base">Most popular anime this season</p>
					</div>
					<a class="view-more-link flex justify-end items-center shrink-0"
							href="#">
						View More
					</a>
				</div>

				<!-- List Cards -->
				<div id="anime-trendings-container"
						class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
					<% trendingAnime.forEach(anime => { %>
					<a href="/overview/anime/<%= anime.mal_id %>">
						<div
								class="title-card group flex flex-col rounded-xl overflow-hidden bg-card border border-transparent transition-all duration-300 hover:shadow-lg hover:border-primary h-full">
							<!-- Image container -->
							<div class="relative aspect-3/4 overflow-hidden">
								<img src="<%= anime.data.images?.webp?.image_url || anime.data.images?.jpg?.image_url || '/images/no-img-placeholder.webp' %>"
										alt="<%= anime.title %>"
										class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" />

								<% if (anime.score) { %>
								<div
										class="absolute top-2 right-2 rounded-md px-2 py-1 text-xs font-semibold bg-float">
									<i class="ri-star-fill icon-star"></i>
									<span><%= anime.score %></span>
								</div>
								<% } %>

								<div
										class="floating-status absolute bottom-2 left-2 rounded-md px-2 py-1 text-xs font-medium bg-float opacity-0 translate-y-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
									<%= anime.status || 'Unknown' %>
								</div>
							</div>

							<div
									class="title-card-info p-3 flex flex-col justify-between flex-1">
								<div>
									<h3 class="text-base font-bold line-clamp-2 min-h-12">
										<%= anime.title %> </h3>
									<p class="text-sm opacity-80">
										<%= anime.type || 'Unknown' %> -
										<%= anime.data.episodes || '?' %> Episodes
									</p>
								</div>
							</div>
						</div>
					</a>
					<% }) %>
				</div>
			</div>
		</section>

		<!-- Top Anime Section -->
		<section id="top-anime-section" class="w-screen my-8">
			<div class="max-w-7xl mx-auto flex flex-col gap-4 px-4">
				<!-- Title Section -->
				<div class="top-anime-title flex justify-between gap-3">
					<div class="flex flex-col gap-1">
						<h2 class="text-xl md:text-2xl font-bold">Top Anime</h2>
						<p class="text-sm md:text-base opacity-80"> Most highest score anime
							of all time </p>
					</div>
					<a class="view-more-link flex items-center justify-end shrink-0"
							href="#">
						View More
					</a>
				</div>

				<!-- List Cards -->
				<div id="top-anime-container"
						class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
					<% topAnime.forEach(anime => { %>
					<a href="/overview/anime/<%= anime.mal_id %>">
						<div
								class="title-card group flex flex-col rounded-xl overflow-hidden bg-card border border-transparent transition-all duration-300 hover:shadow-lg hover:border-primary h-full">
							<!-- Image container -->
							<div class="relative aspect-3/4 overflow-hidden">
								<img src="<%= anime.data.images?.webp?.image_url || anime.data.images?.jpg?.image_url || '/images/no-img-placeholder.webp' %>"
										alt="<%= anime.title %>"
										class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" />

								<% if (anime.score) { %>
								<div
										class="absolute top-2 right-2 rounded-md px-2 py-1 text-xs font-semibold bg-float">
									<i class="ri-star-fill icon-star"></i>
									<span><%= anime.score %></span>
								</div>
								<% } %>

								<div
										class="floating-status absolute bottom-2 left-2 rounded-md px-2 py-1 text-xs font-medium bg-float opacity-0 translate-y-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
									<%= anime.status || 'Unknown' %>
								</div>
							</div>

							<div
									class="title-card-info p-3 flex flex-col justify-between flex-1">
								<div>
									<h3 class="text-base font-bold line-clamp-2 min-h-12">
										<%= anime.title %> </h3>
									<p class="text-sm opacity-80">
										<%= anime.type || 'Unknown' %> -
										<%= anime.data.episodes || '?' %> Episodes
									</p>
								</div>
							</div>
						</div>
					</a>
					<% }) %>
				</div>
			</div>
		</section>

		<!-- Top Manga Section -->
		<section id="trending-manga-section" class="w-screen my-8">
			<div class="max-w-7xl mx-auto flex flex-col gap-4 px-4">
				<!-- Title Section -->
				<div class="top-manga-title flex justify-between gap-3">
					<div class="flex flex-col gap-1">
						<h2 class="text-xl md:text-2xl font-bold">Top Manga</h2>
						<p class="text-sm md:text-base opacity-80"> Most highest score manga
							of all time </p>
					</div>
					<a class="view-more-link flex items-center justify-end shrink-0"
							href="#">
						View More
					</a>
				</div>

				<!-- List Cards -->
				<div id="top-manga-container"
						class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
					<% topManga.forEach(manga => { %>
					<a href="/overview/manga/<%= manga.mal_id %>">
						<div
								class="title-card group flex flex-col rounded-xl overflow-hidden bg-card border border-transparent transition-all duration-300 hover:shadow-lg hover:border-primary h-full">
							<!-- Image container -->
							<div class="relative aspect-3/4 overflow-hidden">
								<img src="<%= manga.data.images?.webp?.image_url || manga.data.images?.jpg?.image_url || '/images/no-img-placeholder.webp' %>"
										alt="<%= manga.title %>"
										class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" />

								<% if (manga.score) { %>
								<div
										class="absolute top-2 right-2 rounded-md px-2 py-1 text-xs font-semibold bg-float">
									<i class="ri-star-fill icon-star"></i>
									<span><%= manga.score %></span>
								</div>
								<% } %>

								<div
										class="floating-status absolute bottom-2 left-2 rounded-md px-2 py-1 text-xs font-medium bg-float opacity-0 translate-y-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
									<%= manga.status || 'Unknown' %>
								</div>
							</div>

							<div
									class="title-card-info p-3 flex flex-col justify-between flex-1">
								<div>
									<h3 class="text-base font-bold line-clamp-2 min-h-12">
										<%= manga.title %> </h3>
									<p class="text-sm opacity-80">
										<%= manga.type || 'Unknown' %> -
										<%= manga.data.chapters || '?' %> Chapters
									</p>
								</div>
							</div>
						</div>
					</a>
					<% }) %>
				</div>
			</div>
		</section>
	</main>
</body>

</html>
