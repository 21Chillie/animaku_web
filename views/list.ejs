<!DOCTYPE html>
<html lang="en" data-theme="dark">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
	<link rel="shortcut icon" href="/images/icons/favicon.ico" type="image/x-icon" />

	<!-- Remix Icon -->
	<link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

	<!-- CSS -->
	<link rel="stylesheet" href="/css/tailwindcss/tailwind.css" />
	<link rel="stylesheet" href="/css/list.css" />

	<title><%= headTitle %></title>

	<script type="module" src="/js/navbar.js" defer></script>
	<script type="module" src="/js/toggleTheme.js" defer></script>
	<script type="module" src="<%= js %>" defer></script>
</head>

<body>
	<header>
		<%- include('partials/navbar.ejs') %>

		<main class="max-w-7xl mx-auto flex flex-col gap-10 mt-24 md:mt-28 px-4">
			<!-- Title and Limit -->
			<section id="title">
				<div
						class="title-section-container flex flex-col md:flex-row md:justify-between md:items-start gap-6 md:gap-12">
					<!-- Left Title Block -->
					<div class="flex flex-col gap-1 max-w-2xl">
						<h1 class="text-xl md:text-2xl font-bold">
							<%= title %>
						</h1>
						<p class="text-sm md:text-base opacity-80">
							<%= description %>
						</p>
					</div>

					<!-- Items per page -->
					<div class="shrink-0">
						<label>
							<span class="limit-label text-sm font-medium">Items per page</span>
							<select name="limit-select" id="limit-select"
									class="mt-1 w-full rounded shadow-sm sm:text-sm p-2">
								<option value="25">25</option>
								<option value="15">15</option>
								<option value="10">10</option>
							</select>
						</label>
					</div>
				</div>
			</section>

			<!-- List Title -->
			<section id="list-title">
				<div id="list-container"
						class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
					<!-- Anime cards will be rendered here -->
				</div>
			</section>

			<!-- Pagination Section -->
			<section id="pagination" class="mb-10">
				<div id="pagination-container" class="flex justify-center items-center gap-2 mt-8">
					<!-- Pagination will be rendered here -->
				</div>

				<!-- Page Info -->
				<div id="page-info" class="text-center mt-4 text-sm opacity-80">
					<!-- Page info will be rendered here -->

				</div>
			</section>
		</main>
	</header>
</body>

</html>
